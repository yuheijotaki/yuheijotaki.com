---
import dayjs from 'dayjs';
import ja from 'dayjs/locale/ja';
dayjs.locale(ja);

interface Props {
  date: Date;
}

const { date } = Astro.props;
const d = dayjs(date);
const formattedDate = `${d.format('YYYY')}年${d.format('M')}月${d.format('D')}日（${d.format('ddd')}）`;
---

<time datetime={d.format('YYYY-MM-DD')}>
  {formattedDate}
</time>

<style lang="scss">
  @use '@/styles/variables' as var;
  @use '@/styles/extension' as *;

  time {
    display: block;
    font-size: var(--font-size-sm);
    line-height: var(--line-height-sm);
  }
</style>
